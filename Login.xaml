<Window x:Name="Login1" x:Class="Ekartoteka.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ekartoteka"
        mc:Ignorable="d"
        Title="E-kartoteka Logowanie" Height="250" Width="250" FontFamily="Montserrat" Background="#FF4D6C91">
    <Grid>
        <Label x:Name="Login_L" Content="Login" HorizontalAlignment="Left" Height="30" Margin="20,10,0,0" VerticalAlignment="Top" Width="125" Foreground="#FFD9D7D5" FontWeight="Bold"/>
        <TextBox x:Name="Login_TB" HorizontalAlignment="Left" Height="30" Margin="20,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" FontWeight="Bold" TextAlignment="Center"/>
        <Label x:Name="Password_L" Content="Hasło" HorizontalAlignment="Left" Height="30" Margin="20,90,0,0" VerticalAlignment="Top" Width="125" Foreground="#FFD9D7D5" FontWeight="Bold"/>
        <PasswordBox x:Name="Password_PB" HorizontalAlignment="Left" Height="30" Margin="20,120,0,0" VerticalAlignment="Top" Width="200"/>
        <Button x:Name="Login_B" Content="ZALOGUJ" HorizontalAlignment="Left" Height="38" Margin="60,165,0,0" VerticalAlignment="Top" Width="125" FontWeight="Bold" FontSize="14" Click="Login_B_Click"/>
    </Grid>
</Window>
